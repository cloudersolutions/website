---
import CircleIcon from 'lucide-astro/Circle';
import CircleCheckIcon from 'lucide-astro/CircleCheck';
---

<div
  class="rounded-lg border border-neutral-200 bg-white p-6 shadow-[0_1px_16px] shadow-black/4 select-none dark:border-neutral-800 dark:bg-neutral-900"
>
  <p class="mb-4 text-[15px] leading-tight font-semibold text-current/80">
    Sustainability certificates
  </p>
  <div class="flex flex-col gap-4">
    <div class="flex gap-2">
      <CircleCheckIcon size={14} class="mt-0.5 flex-shrink-0 stroke-emerald-700" />
      <div class="mr-auto">
        <p class="text-sm leading-4 font-semibold text-current/70">LEED</p>
        <p class="mt-1 text-xs text-current/60">Leadership in Energy and Environmental Design</p>
      </div>
      <p class="text-xs font-medium text-emerald-800">100%</p>
    </div>
    <div class="flex gap-2">
      <CircleIcon size={14} class="mt-0.5 flex-shrink-0 stroke-current/50" />
      <div class="mr-auto">
        <p class="text-sm leading-4 font-semibold text-current/70">BREEAM</p>
        <p class="mt-0.5 text-xs text-current/60">
          Building Research Establishment Environmental Assessment Method
        </p>
      </div>
      <p class="text-xs leading-4 font-medium text-current/80">57%</p>
    </div>
    <div class="flex gap-2">
      <CircleIcon size={14} class="mt-0.5 flex-shrink-0 stroke-current/50" />
      <div class="mr-auto">
        <p class="text-sm leading-4 font-semibold text-current/70">WELL</p>
        <p class="mt-0.5 text-xs text-current/60">Building Standard</p>
      </div>
      <p class="text-xs leading-4 font-medium text-neutral-500">24%</p>
    </div>
  </div>
</div>
