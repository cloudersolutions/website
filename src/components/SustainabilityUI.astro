---
import CircleIcon from 'lucide-astro/Circle';
import CircleCheckIcon from 'lucide-astro/CircleCheck';
---

<div
  class="rounded-lg border border-neutral-200 bg-white p-6 shadow-[0_1px_16px] shadow-black/4 select-none dark:border-neutral-800 dark:bg-neutral-900 dark:shadow-black/50"
>
  <p class="mb-2 text-[15px] leading-tight font-semibold text-neutral-700 dark:text-neutral-300">
    Certification progress
  </p>
  <div class="flex flex-col text-neutral-600 dark:text-neutral-400">
    <div
      class="group flex gap-2 py-2 transition duration-300 hover:text-neutral-800 dark:hover:text-neutral-300"
    >
      <CircleCheckIcon
        size={14}
        class="mt-0.5 flex-shrink-0 fill-green-50 stroke-green-700 transition duration-300 group-hover:stroke-green-800 dark:fill-green-950 dark:group-hover:stroke-green-600"
      />
      <div class="mr-auto">
        <p class="text-[13px] leading-4 font-semibold">LEED</p>
        <p class="mt-1 text-xs text-current/75">Leadership in Energy and Environmental Design</p>
      </div>
      <p
        class="self-center rounded border border-current/25 bg-current/5 px-1.5 text-xs leading-6 font-semibold text-green-700 transition duration-300 group-hover:text-green-800 dark:group-hover:text-green-600"
      >
        100%
      </p>
    </div>
    <div
      class="group flex gap-2 py-2 transition duration-300 hover:text-neutral-800 dark:hover:text-neutral-300"
    >
      <CircleIcon size={14} class="mt-0.5 flex-shrink-0 stroke-current/50" />
      <div class="mr-auto">
        <p class="text-[13px] leading-4 font-semibold">BREEAM</p>
        <p class="mt-0.5 text-xs text-current/75">
          Building Research Establishment Environmental Assessment Method
        </p>
      </div>
      <p
        class="self-center rounded border border-current/25 bg-current/5 px-1.5 text-xs leading-6 font-semibold"
      >
        57%
      </p>
    </div>
    <div
      class="group flex gap-2 py-2 transition duration-300 hover:text-neutral-800 dark:hover:text-neutral-300"
    >
      <CircleIcon size={14} class="mt-0.5 flex-shrink-0 stroke-current/50" />
      <div class="mr-auto">
        <p class="text-[13px] leading-4 font-semibold">WELL</p>
        <p class="mt-0.5 text-xs text-current/75">Building Standard</p>
      </div>
      <p
        class="self-center rounded border border-current/25 bg-current/5 px-1.5 text-xs leading-6 font-semibold"
      >
        24%
      </p>
    </div>
    <div
      class="group flex gap-2 py-2 transition duration-300 hover:text-neutral-800 dark:hover:text-neutral-300"
    >
      <CircleIcon size={14} class="mt-0.5 flex-shrink-0 stroke-current/50" />
      <div class="mr-auto">
        <p class="text-[13px] leading-4 font-semibold">DGNB</p>
        <p class="mt-0.5 text-xs text-current/75">German Sustainable Building Council</p>
      </div>
      <p
        class="self-center rounded border border-current/25 bg-current/5 px-1.5 text-xs leading-6 font-semibold"
      >
        8%
      </p>
    </div>
  </div>
</div>
