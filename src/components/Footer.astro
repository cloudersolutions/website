---
import type { NavItem } from '@data/types';
import navigation from '@data/navigation.yml';
import site from '@data/site.yml';
import Logo from '@components/Logo.astro';

const navItems: NavItem[] = navigation;
const socialItems = [site.twitter, site.linkedin, site.instagram, site.youtube];
---

<footer class="border-t border-neutral-200 py-12 dark:border-neutral-800">
  <div class="container grid grid-cols-2 gap-10 sm:grid-cols-3">
    <div class="col-span-2 sm:col-span-1">
      <Logo size={16} class="flex-shrink-0" />
      <p class="mt-4 text-sm text-neutral-500">&copy; {new Date().getFullYear()} {site.title}</p>
    </div>
    <div class="flex flex-col items-start gap-1">
      <h4 class="mb-1 text-sm font-semibold">Resources</h4>
      {
        navItems.map(({ title, href }) => (
          <a
            href={href}
            class="py-1 text-sm text-neutral-500 transition hover:text-neutral-900 dark:hover:text-neutral-200"
          >
            {title}
          </a>
        ))
      }
    </div>
    <div class="flex flex-col gap-1">
      <h4 class="mb-1 text-sm font-semibold">Follow</h4>
      {
        site.twitter && (
          <a
            href={site.twitter}
            class="py-1 text-sm text-neutral-500 transition hover:text-neutral-900 dark:hover:text-neutral-200"
          >
            X (Twitter)
          </a>
        )
      }
      {
        site.linkedin && (
          <a
            href={site.linkedin}
            class="py-1 text-sm text-neutral-500 transition hover:text-neutral-900 dark:hover:text-neutral-200"
          >
            LinkedIn
          </a>
        )
      }
      {
        site.instagram && (
          <a
            href={site.instagram}
            class="py-1 text-sm text-neutral-500 transition hover:text-neutral-900 dark:hover:text-neutral-200"
          >
            Instagram
          </a>
        )
      }
      {
        site.youtube && (
          <a
            href={site.youtube}
            class="py-1 text-sm text-neutral-500 transition hover:text-neutral-900 dark:hover:text-neutral-200"
          >
            YouTube
          </a>
        )
      }
    </div>
  </div>
</footer>
