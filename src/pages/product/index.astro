---
import BlocksIcon from 'lucide-astro/Blocks';
import BuildingIcon from 'lucide-astro/Building';
import CheckIcon from 'lucide-astro/Check';
import ChevronsLeftRightEllipsisIcon from 'lucide-astro/CodeSquare';
import DatabaseIcon from 'lucide-astro/Database';
import LaptopIcon from 'lucide-astro/Laptop';
import OcatagonAlertIcon from 'lucide-astro/OctagonAlert';
import SettingsIcon from 'lucide-astro/Settings';
import ShieldCheckIcon from 'lucide-astro/ShieldCheck';
import WrenchIcon from 'lucide-astro/Wrench';
import navigation from '@data/navigation.yml';
import { formatPrice } from '@utils/format';
import Divider from '@components/Divider.astro';
import GetStarted from '@components/GetStarted.astro';
import Ping from '@components/Ping.astro';
import MainLayout from '@layouts/MainLayout.astro';
import HowClouderWorksIllustration from '@assets/how-clouder-works.svg';

const title = 'Product';
const description =
  'Clouder enables property owners to boost operational efficiency, improve sustainability, and increase asset value ― at any scale.';
---

<MainLayout title={title} description={description} headerClass="bg-white dark:bg-neutral-900">
  <section class="bg-gradient-to-b from-white to-transparent dark:from-neutral-900">
    <div class="container py-16 text-center sm:py-20 md:py-24 lg:py-28 xl:py-32">
      <div
        class="mx-auto mb-12 w-min rounded-full bg-gradient-to-br from-indigo-400/10 to-indigo-400/20 p-6 shadow-2xs shadow-indigo-400/20 outline-16 outline-indigo-400/5 lg:-mt-6"
      >
        <BuildingIcon class="flex-shrink-0 stroke-indigo-500 dark:stroke-indigo-400" size={24} />
      </div>
      <h1
        class="mb-6 text-3xl font-semibold text-neutral-950 md:text-4xl lg:text-5xl dark:text-neutral-50"
      >
        The new standard for commercial property performance
      </h1>
      <p class="mx-auto mb-8 max-w-3xl text-lg text-neutral-700 dark:text-neutral-300">
        {description}
      </p>
      <div class="flex flex-wrap justify-center">
        <a
          href="#plans"
          class="rounded-full px-3.5 leading-9 font-medium text-indigo-500 transition select-none hover:bg-indigo-400/10 active:bg-indigo-400/10 dark:text-indigo-400"
        >
          Plans
        </a>
        <a
          href="#overview"
          class="rounded-full px-3.5 leading-9 font-medium text-indigo-500 transition select-none hover:bg-indigo-400/10 active:bg-indigo-400/10 dark:text-indigo-400"
        >
          How it works
        </a>
        <a
          href="#features"
          class="rounded-full px-3.5 leading-9 font-medium text-indigo-500 transition select-none hover:bg-indigo-400/10 active:bg-indigo-400/10 dark:text-indigo-400"
        >
          Features
        </a>
        <a
          href="#questions"
          class="rounded-full px-3.5 leading-9 font-medium text-indigo-500 transition select-none hover:bg-indigo-400/10 active:bg-indigo-400/10 dark:text-indigo-400"
        >
          Questions
        </a>
      </div>
    </div>
  </section>
  <section id="plans" class="container pb-16 sm:pb-20 md:pb-24 lg:pb-32 xl:pb-36">
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 lg:gap-0">
      <div
        class="flex flex-col rounded-lg border border-neutral-200 bg-white p-8 pt-6 lg:rounded-r-none lg:border-r-0 dark:border-neutral-800 dark:bg-neutral-900"
      >
        <h2 class="mb-2 text-2xl font-semibold text-neutral-950 dark:text-neutral-50">Retrofit</h2>
        <p>
          <span class="text-neutral-500"
            >From <span class="font-semibold text-neutral-950 dark:text-neutral-50"
              >{formatPrice(20000)} + {formatPrice(149, 'month')}</span
            > per building</span
          >
        </p>
        <p class="-mx-8 my-6 border-y border-neutral-200 px-8 py-6 dark:border-neutral-800">
          Start accessing data by retrofitting Clouder to an existing building and reduce energy
          consumption.
        </p>
        <ul class="mb-8 space-y-2 text-sm *:flex *:gap-2">
          <li>
            <CheckIcon size={14} class="mt-1 flex-shrink-0 stroke-current/60 stroke-3" />
            Detect reasons for excess energy consumption and make your building more energy efficient.
          </li>
          <li>
            <CheckIcon size={14} class="mt-1 flex-shrink-0 stroke-current/60 stroke-3" />
            Enable quick and cost effective tenant modifications and energy upgrades.
          </li>
          <li>
            <CheckIcon size={14} class="mt-1 flex-shrink-0 stroke-current/60 stroke-3" />
            Capture data from systems and devices anywhere in the building.
          </li>
          <li>
            <CheckIcon size={14} class="mt-1 flex-shrink-0 stroke-current/60 stroke-3" />
            Easy to expand to full integration.
          </li>
        </ul>
        <a
          href={navigation.contact.href}
          class="mt-auto inline-flex h-10 cursor-pointer items-center justify-center gap-1 rounded bg-neutral-800 px-4 text-center text-sm font-[550] text-nowrap text-neutral-50 transition select-none hover:bg-neutral-950 active:bg-neutral-950 dark:bg-neutral-200 dark:text-neutral-950 dark:hover:bg-white dark:active:bg-white"
        >
          Contact sales
        </a>
      </div>
      <div
        class="flex flex-col rounded-lg border border-neutral-200 bg-white p-8 pt-6 lg:z-10 lg:-my-4 lg:pt-10 lg:pb-12 lg:shadow-2xl lg:shadow-black/10 dark:border-neutral-800 dark:bg-neutral-900"
      >
        <h2 class="mb-2 text-2xl font-semibold text-neutral-950 dark:text-neutral-50">
          Full Integration
        </h2>
        <p>
          <span class="text-neutral-500">Custom pricing</span>
        </p>
        <p class="-mx-8 my-6 border-y border-neutral-200 px-8 py-6 dark:border-neutral-800">
          Transform your building into a net-zero digital building, improve operational efficiency,
          and enhance building security.
        </p>
        <ul class="mb-8 space-y-2 text-sm *:flex *:gap-2">
          <li>
            <CheckIcon
              size={14}
              class="mt-1 flex-shrink-0 stroke-indigo-500 stroke-3 dark:stroke-indigo-400"
            />
            Seamless physical integration of all systems, subsystems, and devices giving you a complete
            overview and improved control.
          </li>
          <li>
            <CheckIcon
              size={14}
              class="mt-1 flex-shrink-0 stroke-indigo-500 stroke-3 dark:stroke-indigo-400"
            />
            Reduce the need for traditional cabling which streamlines work phases, installation duration,
            and thereby lowers construction costs.
          </li>
          <li>
            <CheckIcon
              size={14}
              class="mt-1 flex-shrink-0 stroke-indigo-500 stroke-3 dark:stroke-indigo-400"
            />
            Detect reasons for excess energy consumption to make your building more energy efficient.
          </li>
          <li>
            <CheckIcon
              size={14}
              class="mt-1 flex-shrink-0 stroke-indigo-500 stroke-3 dark:stroke-indigo-400"
            />
            Utilize accurate real-time building data in monitoring, device control, fault detection and
            diagnostics, reporting, and other applications.
          </li>
          <li>
            <CheckIcon
              size={14}
              class="mt-1 flex-shrink-0 stroke-indigo-500 stroke-3 dark:stroke-indigo-400"
            />
            Integrate building data with smart office apps or property management software via our API.
          </li>
          <li>
            <CheckIcon
              size={14}
              class="mt-1 flex-shrink-0 stroke-indigo-500 stroke-3 dark:stroke-indigo-400"
            />
            Enhance building security with accurate audit trail, end-to-end encryption, and password
            management.
          </li>
          <li>
            <CheckIcon
              size={14}
              class="mt-1 flex-shrink-0 stroke-indigo-500 stroke-3 dark:stroke-indigo-400"
            />
            Easy to expand with minimal construction work.
          </li>
        </ul>
        <a
          href={navigation.contact.href}
          class="mt-auto inline-flex h-10 cursor-pointer items-center justify-center gap-1 rounded bg-indigo-500 px-4 text-center text-sm font-[550] text-nowrap text-white transition select-none hover:bg-indigo-600 active:bg-indigo-600 dark:hover:bg-indigo-400 dark:active:bg-indigo-400"
        >
          Contact sales
        </a>
      </div>
      <div
        class="flex flex-col rounded-lg border border-neutral-200 bg-white p-8 pt-6 lg:rounded-l-none lg:border-l-0 dark:border-neutral-800 dark:bg-neutral-900"
      >
        <h2 class="mb-2 text-2xl font-semibold text-neutral-950 dark:text-neutral-50">Portfolio</h2>
        <p class="text-neutral-500">Custom pricing</p>
        <p class="-mx-8 my-6 border-y border-neutral-200 px-8 py-6 dark:border-neutral-800">
          Maximize efficiency and sustainability across your entire building portfolio when Clouder
          is integrated to all of them.
        </p>
        <ul class="mb-8 space-y-2 text-sm *:flex *:gap-2">
          <li>
            <CheckIcon size={14} class="mt-1 flex-shrink-0 stroke-3" />
            Portfolio-wide energy optimization and sustainability tracking.
          </li>
          <li>
            <CheckIcon size={14} class="mt-1 flex-shrink-0 stroke-3" />
            Benchmark performance across properties to identify inefficiencies.
          </li>
          <li>
            <CheckIcon size={14} class="mt-1 flex-shrink-0 stroke-3" />
            Scalable integrations for rapid onboarding of new buildings.
          </li>
          <li>
            <CheckIcon size={14} class="mt-1 flex-shrink-0 stroke-3" />
            Cross-building analytics for data-driven, portfolio-level decisions.
          </li>
          <li>
            <CheckIcon size={14} class="mt-1 flex-shrink-0 stroke-3" />
            Streamlined ESG reporting for regulatory compliance and investors.
          </li>
        </ul>
        <a
          href={navigation.contact.href}
          class="mt-auto inline-flex h-10 cursor-pointer items-center justify-center gap-1 rounded bg-neutral-800 px-4 text-center text-sm font-[550] text-nowrap text-neutral-50 transition select-none hover:bg-neutral-950 active:bg-neutral-950 dark:bg-neutral-200 dark:text-neutral-950 dark:hover:bg-white dark:active:bg-white"
        >
          Contact sales
        </a>
      </div>
    </div>
  </section>
  <Divider />
  <section id="overview" class="container py-16 sm:py-20 md:py-24 lg:py-28 xl:py-32">
    <h2
      class="mb-8 text-2xl font-semibold text-neutral-950 md:text-3xl lg:mb-12 dark:text-neutral-50"
    >
      How it works
    </h2>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-10 lg:gap-x-12">
      <div
        class="col-span-1 flex items-center justify-center px-4 md:col-span-2 md:col-start-1 md:row-span-2 md:row-start-1 lg:col-span-4 lg:col-start-4 lg:row-span-2"
      >
        <div class="relative">
          <HowClouderWorksIllustration class="h-auto max-w-full" />
          <span class="absolute top-[91.85%] left-[7.75%] flex size-3">
            <Ping color="purple" isAnimated />
          </span>
          <span class="absolute top-[64%] left-0 flex size-3">
            <Ping color="indigo" isAnimated />
          </span>
          <span class="absolute top-[93%] left-[42%] flex size-3">
            <Ping color="pink" isAnimated />
          </span>
          <span class="absolute top-[35%] left-[79.5%] flex size-3">
            <Ping color="sky" isAnimated />
          </span>
        </div>
      </div>
      <div class="md:col-start-1 md:row-start-3 lg:col-span-3 lg:col-start-1 lg:row-start-1">
        <div
          class="h-full rounded-md border border-neutral-200 bg-white p-6 dark:border-neutral-800 dark:bg-neutral-900"
        >
          <div class="mb-3 flex items-center gap-3">
            <Ping color="purple" />
            <h3 class="text-xl font-semibold text-neutral-950 dark:text-neutral-50">
              Virtual cables
            </h3>
          </div>
          <p class="text-sm">
            The signals of building technology systems are digitized and transmitted through the
            building’s core network with virtual cables. This eliminates the need for physical
            low-voltage cables that run through structures and firestops, making the system
            flexible.
          </p>
        </div>
      </div>
      <div class="md:col-start-2 md:row-start-3 lg:col-span-3 lg:col-start-1 lg:row-start-2">
        <div
          class="h-full rounded-md border border-neutral-200 bg-white p-6 dark:border-neutral-800 dark:bg-neutral-900"
        >
          <div class="mb-3 flex items-center gap-3">
            <Ping color="indigo" />
            <h3 class="text-xl font-semibold text-neutral-950 dark:text-neutral-50">
              Edge Connectors
            </h3>
          </div>
          <p class="text-sm">
            Edge Connector (EC) devices act as connection points for systems and devices,
            transmitting data to the Virtual Cabling Engine through either wireless or wired IP
            networks using end-to-end encryption. Edge Connectors operate similarly to distributed
            I/O systems and significantly reduce the need for traditional cabling.
          </p>
        </div>
      </div>
      <div class="md:col-start-1 md:row-start-4 lg:col-span-3 lg:col-start-8 lg:row-start-1">
        <div
          class="h-full rounded-md border border-neutral-200 bg-white p-6 dark:border-neutral-800 dark:bg-neutral-900"
        >
          <div class="mb-3 flex items-center gap-3">
            <Ping color="sky" />
            <h3 class="text-xl font-semibold text-neutral-950 dark:text-neutral-50">
              Data storage
            </h3>
          </div>
          <p class="text-sm">
            All system and device data is securely stored in the cloud, where it can be accessed in
            real-time through the Clouder Dashboard or via our API. This centralized approach allows
            you to seamlessly monitor and analyze data from all your systems and devices.
          </p>
        </div>
      </div>
      <div class="md:col-start-2 md:row-start-4 lg:col-span-3 lg:col-start-8 lg:row-start-2">
        <div
          class="h-full rounded-md border border-neutral-200 bg-white p-6 dark:border-neutral-800 dark:bg-neutral-900"
        >
          <div class="mb-3 flex items-center gap-3">
            <Ping color="pink" />
            <h3 class="text-xl font-semibold text-neutral-950 dark:text-neutral-50">
              Virtual Cabling Engine
            </h3>
          </div>
          <p class="text-sm">
            The Virtual Cabling Engine (VCE) integrates with building technology systems on a more
            advanced level compared to traditional setups. It stores virtual cabling information,
            consolidates data from Edge Connectors and handles protocol conversions on-site. The
            data is then securely transmitted to the cloud.
          </p>
        </div>
      </div>
    </div>
  </section>
  <Divider />
  <section id="features" class="container py-16 sm:py-20 md:py-24 lg:py-28 xl:py-32">
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 lg:gap-8">
      <div class="col-span-full mb-4 lg:col-span-1 lg:row-span-4">
        <h2 class="mb-4 text-2xl font-semibold text-neutral-950 md:text-3xl dark:text-neutral-50">
          Feature overview
        </h2>
        <p>
          Clouder comes with a range of features and capabilities that enable efficient building
          management.
        </p>
      </div>
      <div
        class="space-y-3 rounded-md border border-neutral-200 bg-white p-6 lg:mt-1.5 dark:border-neutral-800 dark:bg-neutral-900"
      >
        <div class="flex size-10 rounded bg-indigo-400/10">
          <BlocksIcon
            size={20}
            class="m-auto flex-shrink-0 stroke-indigo-500 dark:stroke-indigo-400"
          />
        </div>
        <h4 class="text-xl font-semibold text-neutral-950 dark:text-neutral-50">
          Integration platform
        </h4>
        <p class="text-sm">
          Seamless integration of all building technology systems, subsystems, and devices,
          regardless of vendor or protocol.
        </p>
        <p class="text-sm">
          Add new or external systems and devices with minimal construction work by using Edge
          Connectors.
        </p>
        <p class="text-sm">
          Protocol conversions to enable communication between otherwise hard-to-integrate systems
          that don’t communicate with each other.
        </p>
        <p class="text-xs text-neutral-500">
          <strong class="font-medium">Availability:</strong> All plans
        </p>
      </div>
      <div
        class="space-y-3 rounded-md border border-neutral-200 bg-white p-6 lg:mt-1.5 dark:border-neutral-800 dark:bg-neutral-900"
      >
        <div class="flex size-10 rounded bg-indigo-400/10">
          <LaptopIcon
            size={20}
            class="m-auto flex-shrink-0 stroke-indigo-500 dark:stroke-indigo-400"
          />
        </div>
        <h4 class="text-xl font-semibold text-neutral-950 dark:text-neutral-50">
          Clouder&nbsp;Dashboard
        </h4>
        <p class="text-sm">
          View and manage all aspects of your building straight from your browser.
        </p>
        <p class="text-sm">
          Real-time data on energy consumption, indoor climate, and other insights enable improved
          monitoring and informed decision-making.
        </p>
        <p class="text-sm">
          Access to features like <a
            href="#features-fdd"
            class="underline decoration-current/50 decoration-dotted underline-offset-2"
            >Fault detection & diagnostics</a
          >, <a
            href="#features-dc"
            class="underline decoration-current/50 decoration-dotted underline-offset-2"
            >Device control</a
          >, and more.
        </p>
        <p class="text-xs text-neutral-500">
          <strong class="font-medium">Availability:</strong> All plans
        </p>
      </div>
      <div
        class="space-y-3 rounded-md border border-neutral-200 bg-white p-6 lg:mt-1.5 dark:border-neutral-800 dark:bg-neutral-900"
      >
        <div class="flex size-10 rounded bg-indigo-400/10">
          <DatabaseIcon
            size={20}
            class="m-auto flex-shrink-0 stroke-indigo-500 dark:stroke-indigo-400"
          />
        </div>
        <h4 class="text-xl font-semibold text-neutral-950 dark:text-neutral-50">Data storage</h4>
        <p class="text-sm">
          Cloud-based data storage for accurate building data. No more relying on benchmarks or
          estimates.
        </p>
        <p class="text-sm">
          View and export building data from Clouder&nbsp;Dashboard for sustainability reporting.
        </p>
        <p class="text-sm">
          Our five-year data retention policy gives you full ownership and control of your data.
        </p>
        <p class="text-xs text-neutral-500">
          <strong class="font-medium">Availability:</strong> All plans
        </p>
      </div>
      <div
        class="space-y-3 rounded-md border border-neutral-200 bg-white p-6 lg:mt-1.5 dark:border-neutral-800 dark:bg-neutral-900"
      >
        <div class="flex size-10 rounded bg-indigo-400/10">
          <ChevronsLeftRightEllipsisIcon
            size={20}
            class="m-auto flex-shrink-0 stroke-indigo-500 dark:stroke-indigo-400"
          />
        </div>
        <h4 class="text-xl font-semibold text-neutral-950 dark:text-neutral-50">Real-time API</h4>
        <p class="text-sm">Access all building data through our real-time API.</p>
        <p class="text-sm">
          Perfect for smart office apps, property management software, and other third-party
          integrations.
        </p>
        <p class="text-xs text-neutral-500">
          <strong class="font-medium">Availability:</strong> Full Integration and Portfolio plans
        </p>
      </div>
      <div
        id="features-fdd"
        class="space-y-3 rounded-md border border-neutral-200 bg-white p-6 lg:mt-1.5 dark:border-neutral-800 dark:bg-neutral-900"
      >
        <div class="flex size-10 rounded bg-indigo-400/10">
          <OcatagonAlertIcon
            size={20}
            class="m-auto flex-shrink-0 stroke-indigo-500 dark:stroke-indigo-400"
          />
        </div>
        <h4 class="text-xl font-semibold text-neutral-950 dark:text-neutral-50">
          Fault detection & diagnostics
        </h4>
        <p class="text-sm">
          Quickly identify and diagnose faults, problems, and conflicts in your building automation
          system.
        </p>
        <p class="text-sm">
          Receive targeted recommendations and clear guidance for resolving identified issues.
        </p>
        <p class="text-sm">
          Save time and resources by reducing manual work and streamline troubleshooting workflows.
        </p>
        <p class="text-xs text-neutral-500">
          <strong class="font-medium">Availability:</strong> Full Integration and Portfolio plans
        </p>
      </div>
      <div
        id="features-dc"
        class="space-y-3 rounded-md border border-neutral-200 bg-white p-6 lg:mt-1.5 dark:border-neutral-800 dark:bg-neutral-900"
      >
        <div class="flex size-10 rounded bg-indigo-400/10">
          <SettingsIcon
            size={20}
            class="m-auto flex-shrink-0 stroke-indigo-500 dark:stroke-indigo-400"
          />
        </div>
        <h4 class="text-xl font-semibold text-neutral-950 dark:text-neutral-50">Device control</h4>
        <p class="text-sm">
          Control all systems and field devices in your building without disrupting the existing
          building automation system.
        </p>
        <p class="text-sm">
          Use sophisticated, event-based rules to control devices to further reduce energy
          consumption.
        </p>
        <p class="text-xs text-neutral-500">
          <strong class="font-medium">Availability:</strong> Full Integration and Portfolio plans
        </p>
      </div>
      <div
        class="space-y-3 rounded-md border border-neutral-200 bg-white p-6 lg:mt-1.5 dark:border-neutral-800 dark:bg-neutral-900"
      >
        <div class="flex size-10 rounded bg-indigo-400/10">
          <ShieldCheckIcon
            size={20}
            class="m-auto flex-shrink-0 stroke-indigo-500 dark:stroke-indigo-400"
          />
        </div>
        <h4 class="text-xl font-semibold text-neutral-950 dark:text-neutral-50">
          Additional security
        </h4>
        <p class="text-sm">
          Fine-grained data access rules, accurate audit trail, end-to-end encryption and secure
          cloud storage of building data.
        </p>
        <p class="text-sm">
          Robust security in building automation with centralized password management. No more
          default passwords known by everyone.
        </p>
        <p class="text-xs text-neutral-500">
          <strong class="font-medium">Availability:</strong> Full Integration and Portfolio plans
        </p>
      </div>
      <div
        class="space-y-3 rounded-md border border-neutral-200 bg-white p-6 lg:mt-1.5 dark:border-neutral-800 dark:bg-neutral-900"
      >
        <div class="flex size-10 rounded bg-indigo-400/10">
          <WrenchIcon
            size={20}
            class="m-auto flex-shrink-0 stroke-indigo-500 dark:stroke-indigo-400"
          />
        </div>
        <h4 class="text-xl font-semibold text-neutral-950 dark:text-neutral-50">
          Custom integrations
        </h4>
        <p class="text-sm">
          Our team can offer tailored solutions and consulting services to address your specific
          needs, from advanced system integrations to personalized building performance strategies.
        </p>
        <a
          href={navigation.contact.href}
          class="mt-2 inline-flex h-8 cursor-pointer items-center justify-center gap-1 rounded bg-indigo-500 px-3 text-center text-xs font-[550] text-nowrap text-white transition select-none hover:bg-indigo-600 active:bg-indigo-600 dark:hover:bg-indigo-400 dark:active:bg-indigo-400"
        >
          Let’s talk
        </a>
      </div>
    </div>
  </section>
  <Divider />
  <section id="questions" class="container py-16 sm:py-20 md:py-24 lg:py-28 xl:py-32">
    <div class="grid grid-cols-1 items-start gap-10 lg:grid-cols-3">
      <div>
        <h2 class="mb-4 text-2xl font-semibold text-neutral-950 md:text-3xl dark:text-neutral-50">
          I have a question…
        </h2>
        <div
          class="flex flex-col items-start gap-6 md:flex-row md:items-center lg:flex-col lg:items-start"
        >
          <p>
            We've gathered answers to the questions we hear most often. <a
              href={navigation.contact.href}
              class="underline underline-offset-2 transition hover:opacity-65">Contact&nbsp;us</a
            > if you can’t find what you’re looking for.
          </p>
