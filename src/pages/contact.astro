---
import { Image } from 'astro:assets';
import MainLayout from '@layouts/MainLayout.astro';
import tomiImage from '@assets/tomi.jpg';
import jussiImage from '@assets/jussi.jpg';
import hqImage from '@assets/hq.jpg';

const title = 'Contact us';
const description =
  'Get in touch with sales to get your security and compliance concern answered or to book a demo.';
---

<MainLayout title={title} description={description} headerClass="bg-neutral-50 dark:bg-neutral-900">
  <section class="border-b border-current/5 bg-neutral-50 dark:bg-neutral-900">
    <div class="container flex flex-col justify-center pt-16 pb-26 md:pt-30 md:pb-40">
      <h1 class="mb-5 text-4xl font-semibold text-neutral-900 md:text-5xl dark:text-neutral-100">
        Interested to learn more?
      </h1>
      <p class="text-lg">{description}</p>
    </div>
  </section>
  <section class="container py-24">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-3">
      <div>
        <Image src={tomiImage} alt="Tomi Grönlund" class="aspect-square rounded object-cover" />
        <h3 class="mt-4 mb-2 text-xl font-semibold text-neutral-900 dark:text-neutral-100">
          Tomi Grönlund
        </h3>
        <p>CEO</p>
        <p>tomi.gronlund@cloudersolutions.com</p>
        <p>+358 50 527 1416</p>
      </div>
      <div>
        <Image src={jussiImage} alt="Jussi Toivonen" class="aspect-square rounded object-cover" />
        <h3 class="mt-4 mb-2 text-xl font-semibold text-neutral-900 dark:text-neutral-100">
          Jussi Toivonen
        </h3>
        <p>Building Systems Technology Lead</p>
        <p>jussi.toivonen@cloudersolutions.com</p>
        <p>+358 50 560 8434</p>
      </div>
      <div>
        <Image src={hqImage} alt="Office" class="aspect-square rounded object-cover" />
        <h3 class="mt-4 mb-2 text-xl font-semibold text-neutral-900 dark:text-neutral-100">
          Office
        </h3>
        <p>Pursimiehenkatu 26 B</p>
        <p>00150 Helsinki</p>
        <p>Finland</p>
        <p>+358 40 3525 47 3</p>
      </div>
    </div>
  </section>
  <section class="container pb-24">
    <h2 class="mb-6 text-2xl font-semibold text-neutral-900 md:text-3xl dark:text-neutral-100">
      Fill the form and we will be in touch soon
    </h2>
    <form
      name="contact"
      method="POST"
      data-netlify="true"
      data-netlify-honeypot="honeypot"
      class="space-y-5 lg:max-w-2/3 lg:pr-4"
    >
      <div class="flex gap-4">
        <div class="w-full">
          <label for="firstName" class="mb-2 block font-medium">First name</label>
          <input
            id="firstName"
            name="firstName"
            type="text"
            required
            class="block h-11 w-full rounded border border-neutral-200 px-3 dark:border-neutral-800"
          />
        </div>
        <div class="w-full">
          <label for="lastName" class="mb-2 block font-medium">Last name</label>
          <input
            id="lastName"
            name="lastName"
            type="text"
            required
            class="block h-11 w-full rounded border border-neutral-200 px-3 dark:border-neutral-800"
          />
        </div>
      </div>
      <div>
        <label for="email" class="mb-2 block font-medium">Email</label>
        <input
          id="email"
          name="email"
          type="email"
          required
          class="block h-11 w-full rounded border border-neutral-200 px-3 dark:border-neutral-800"
        />
      </div>
      <div>
        <label for="phone" class="mb-2 block font-medium">Phone</label>
        <input
          id="phone"
          name="phone"
          type="tel"
          class="block h-11 w-full rounded border border-neutral-200 px-3 dark:border-neutral-800"
        />
      </div>
      <div>
        <label for="message" class="mb-2 block font-medium">Message</label>
        <textarea
          id="message"
          name="message"
          rows="4"
          required
          class="block w-full rounded border border-neutral-200 p-3 dark:border-neutral-800"
        ></textarea>
      </div>
      <input
        id="honeypot"
        name="honeypot"
        type="text"
        autocomplete="off"
        tabindex="-1"
        aria-hidden="true"
        style="position: absolute; left: -9999px;"
      />
      <button
        type="submit"
        class="h-11 rounded bg-black px-6 font-medium text-white dark:bg-white dark:text-black"
      >
        Send
      </button>
    </form>
  </section>
</MainLayout>
