---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

type Props = Parameters<typeof BaseLayout>[0];

const props = Astro.props;
---

<BaseLayout {...props}>
  <Header />
  <main class="container py-16 sm:py-20 md:py-24 lg:py-32">
    <section class="prose prose-neutral dark:prose-invert mx-auto">
      {props.frontmatter?.title && <h1>{props.frontmatter.title}</h1>}
      {props.frontmatter?.description && <p>{props.frontmatter.description}</p>}
      <slot />
    </section>
  </main>
  <Footer />
</BaseLayout>
