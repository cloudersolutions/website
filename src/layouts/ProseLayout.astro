---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

type Props = Parameters<typeof BaseLayout>[0];

const props = Astro.props;
---

<BaseLayout {...props}>
  <Header />
  <main class="container pt-8 pb-16 sm:pt-16 sm:pb-24 lg:pt-24 lg:pb-32">
    <section class="prose prose-neutral dark:prose-invert mx-auto">
      {props.frontmatter?.title && <h1>{props.frontmatter.title}</h1>}
      <slot />
    </section>
  </main>
  <Footer />
</BaseLayout>
