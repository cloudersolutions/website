---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

type Props = Parameters<typeof BaseLayout>[0];

const props = Astro.props;
---

<BaseLayout {...props}>
  <Header />
  <main class="container">
    <section class="prose prose-neutral dark:prose-invert mx-auto pt-8 pb-24 md:pt-16">
      {
        props.frontmatter && props.frontmatter.title && (
          <h1 class="mt-4 mb-6">{props.frontmatter.title}</h1>
        )
      }
      <slot />
    </section>
  </main>
  <Footer />
</BaseLayout>
