---
import BaseLayout from '@layouts/BaseLayout.astro';
import SiteHeader from '@components/SiteHeader.astro';
import SiteFooter from '@components/SiteFooter.astro';

type Props = Parameters<typeof BaseLayout>[0];

const props = Astro.props;
---

<BaseLayout {...props}>
  <SiteHeader />
  <main class="container py-16 sm:py-20 md:py-24 lg:py-28">
    <section class="prose prose-neutral dark:prose-invert mx-auto">
      {props.frontmatter?.title && <h1>{props.frontmatter.title}</h1>}
      {props.frontmatter?.description && <p>{props.frontmatter.description}</p>}
      <slot />
    </section>
  </main>
  <SiteFooter />
</BaseLayout>
