---
import type { ImageMetadata } from 'astro';

import PostHog from '@components/PostHog.astro';
import config from '@data/config.yml';
import fallbackImage from '@assets/shareimage.png';
import '../styles/global.css';

interface Props {
  headerClass?: string;
  headerItemClass?: string;
  title?: string;
  ogTitle?: string;
  description?: string;
  image?: ImageMetadata;
  frontmatter?: {
    title?: string;
    description?: string;
    date?: string;
  };
}

const { title, ogTitle, description, image, frontmatter } = Astro.props;

const pageTitle = [...new Set([frontmatter?.title || title, config.title])]
  .filter(Boolean)
  .join(' Â· ');
const pageDescription = frontmatter?.description || description || config.description;
const pageImage = image ? image : fallbackImage;
---

<!doctype html>
<html lang="en" class="overflow-x-hidden scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#000000" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <meta property="og:title" content={ogTitle || pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.toString()} />
    <meta property="og:image" content={new URL(String(pageImage.src), Astro.url).href} />
    <meta property="og:image:alt" content={pageTitle} />
    <meta property="og:image:width" content={String(pageImage.width)} />
    <meta property="og:image:height" content={String(pageImage.height)} />
    <link
      rel="preload"
      href="/PlusJakartaSans[wght].woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/PlusJakartaSans-Italic[wght].woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <PostHog />
  </head>
  <body
    class="flex min-h-dvh flex-col overflow-x-hidden bg-neutral-50 font-sans text-neutral-800 dark:bg-neutral-950 dark:text-neutral-200"
  >
    <slot />
  </body>
</html>

<script>
  const links = document.links;
  for (const link of links) {
    if (link.hostname !== window.location.hostname && !link.href.match(/^mailto\:/)) {
      link.target = '_blank';
      link.rel = 'noopener noreferrer';
    }
  }
</script>
